.bg-black{
    background-color: #01131f;
}

.title-animation{
    transition: opacity 0.5s linear, letter-spacing 2s linear;
}
.title2-delay{
    transition-delay: 0.3s ;
}
.subtitle-animation{
    transition: opacity 1s 0.6s linear, letter-s pacing 2s 0.6s linear ;
}

.image-animation {
    animation: image-in 2s cubic-bezier(0.075, 0.82, 0.165, 1) forwards;
}


.image-start {
    opacity: 0;
    transform: translateY(20px);
}

.text-start{
    letter-spacing: 0em;
    opacity: 0;
}

.text-end{
    letter-spacing: 0.1em;
    opacity: 1;
}

@keyframes image-in {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0px);
    }
}